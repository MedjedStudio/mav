# 開発環境用環境変数テンプレート（Docker Compose用）

# JWT設定
JWT_SECRET_KEY=change-this-to-a-secure-secret-key
JWT_EXPIRE_HOURS=24

# データベース接続設定
MYSQL_USER=mav_user
MYSQL_PASSWORD=change-this-password
MYSQL_HOST=mysql  # 開発環境用: mysql, 本番環境用: localhost
MYSQL_PORT=3306
MYSQL_DATABASE=mav_db

# CORS設定
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,https://your-domain.com

# サーバー設定
DEBUG=true
HOST=0.0.0.0
PORT=8000

# フロントエンド設定
VITE_API_URL=http://localhost:8000

# アップロード設定
UPLOAD_DIR=/app/uploads  # 開発環境用: /app/uploads, 本番環境用: /var/source/mav/uploads